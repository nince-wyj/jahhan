<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.jahhan</groupId>
		<artifactId>package-frameworkx</artifactId>
		<version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>package-frameworkx-base</artifactId>
    <packaging>jar</packaging>
    <name>${project.artifactId}</name>
    <description>The all in one project of common</description>
    <properties>
        <skip_maven_deploy>false</skip_maven_deploy>
    </properties>
    <dependencies>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>package-base</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>frameworkx-package</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>net.jahhan</groupId>
			<artifactId>supported-frameworkx-base</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <artifactSet>
                                <includes>
                                    <include>net.jahhan:package-base</include>
                                    <include>net.jahhan:frameworkx-package</include>
                                    <include>net.jahhan:supported-frameworkx-base</include>
                                    
                                    <include>net.jahhan:package-service</include>
									<include>net.jahhan:common-plugin-util</include>
                                    <include>net.jahhan:jdbc-api</include>
                                    <include>net.jahhan:jdbc-druid</include>
                                    <include>net.jahhan:jdbc-c3p0</include>
                                    <include>net.jahhan:cache-api</include>
                                    <include>net.jahhan:cache-redis-sentinel</include>
                                    <include>net.jahhan:cache-ehcache</include>
                                    <include>net.jahhan:apidoc-swagger</include>
                                    <include>net.jahhan:logappend-logback</include>
                                    <include>net.jahhan:register-api</include>
                                    <include>net.jahhan:register-zookeeper</include>
                                    
                                    <include>net.jahhan:hessian-lite</include>
									<include>net.jahhan:common-plugin-util</include>
									<include>net.jahhan:dubbo-common</include>
									<include>net.jahhan:dubbo-remoting-api</include>
									<include>net.jahhan:dubbo-remoting-netty</include>
									<include>net.jahhan:dubbo-remoting-mina</include>
									<include>net.jahhan:dubbo-remoting-grizzly</include>
									<include>net.jahhan:dubbo-remoting-p2p</include>
									<include>net.jahhan:dubbo-remoting-http</include>
									<include>net.jahhan:dubbo-remoting-zookeeper</include>
									<include>net.jahhan:dubbo-rpc-api</include>
									<include>net.jahhan:dubbo-rpc-default</include>
									<include>net.jahhan:dubbo-rpc-injvm</include>
									<include>net.jahhan:dubbo-rpc-rmi</include>
									<include>net.jahhan:dubbo-rpc-hessian</include>
									<include>net.jahhan:dubbo-rpc-http</include>
									<include>net.jahhan:dubbo-rpc-webservice</include>
									<include>net.jahhan:dubbo-rpc-memcached</include>
									<include>net.jahhan:dubbo-rpc-redis</include>
									<include>net.jahhan:dubbo-rpc-rest</include>
									<include>net.jahhan:dubbo-filter-validation</include>
									<include>net.jahhan:dubbo-filter-cache</include>
									<include>net.jahhan:dubbo-cluster</include>
									<include>net.jahhan:dubbo-registry-api</include>
									<include>net.jahhan:dubbo-registry-default</include>
									<include>net.jahhan:dubbo-registry-multicast</include>
									<include>net.jahhan:dubbo-registry-zookeeper</include>
									<include>net.jahhan:dubbo-registry-redis</include>
									<include>net.jahhan:dubbo-monitor-api</include>
									<include>net.jahhan:dubbo-monitor-default</include>
									<include>net.jahhan:dubbo-config-api</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>